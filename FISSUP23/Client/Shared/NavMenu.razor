<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FISSUP23</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="() => expandOverfoMenu = !expandOverfoMenu" href="overforing">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Överföringar
            </NavLink>
            @if (expandOverfoMenu)
            {
                <div class="nav-item px-5">
                    <NavLink class="nav-link" href="addOverforing">
                        <span class="oi oi-plus" aria-hidden="true"></span> Lägg till
                    </NavLink>
                </div>
                <div class="nav-item px-5">
                    <NavLink class="nav-link" href="deleteOverforing">
                        <span class="oi oi-minus" aria-hidden="true"></span> Radera
                    </NavLink>
                </div>
                <div class="nav-item px-5">
                    <NavLink class="nav-link" href="updateOverforing">
                        <span class="oi oi-reload" aria-hidden="true"></span> Uppdatera
                    </NavLink>
                </div>
            }
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="contact">
                <span class="oi oi-envelope-closed" aria-hidden="true"></span> Kontakt
            </NavLink>
        </div>
    </nav>
</div>

@code {
      
    private bool expandOverfoMenu = false;
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
